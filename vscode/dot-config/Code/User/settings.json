{
    "files.autoSave": "afterDelay",
    "editor.suggestSelection": "first",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "search.exclude": {
        "**/node_modules/**": true,
        "**/target/**": true,
        "**/.vscode": true,
        "**/Cargo.lock": true,
        "**/.gitignore": true
    },
    "search.smartCase": true,
    "search.sortOrder": "modified",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "chat.commandCenter.enabled": false,
    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "Jetbrains Mono, Menlo, Monaco, 'Courier New', monospace",
    "go.toolsManagement.autoUpdate": true,
    "rust-analyzer.check.command": "clippy",
    "redhat.telemetry.enabled": false,
    "git.blame.editorDecoration.enabled": true,
    "git.replaceTagsWhenPull": true,
    "git.autofetch": true,
    "vim.leader": " ",
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.surround": true,
    "vim.smartRelativeLine": true,
    "vim.matchpairs": "(:),{:},[:],<:>,/:/",
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 300,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "r", "n"],
            "commands": ["editor.action.rename"]
        },
        {
            "before": ["<leader>", "d"],
            "commands": ["editor.action.showHover"]
        },
        {
            "before": ["<leader>", "r", "a"],
            "commands": ["editor.action.refactor"]
        },
        {
            "before": ["<leader>", "l"],
            "commands": ["editor.action.refactor"]
        },
        {
            "before": ["<leader>", "="],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<leader>", "o"],
            "commands": ["editor.action.organizeImports"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["editor.debug.action.toggleBreakpoint"]
        },
        {
            "before": ["<leader>", "c"],
            "commands": ["editor.action.commentLine"]
        },
        {
            "before": ["<leader>", "f"],
            "commands": ["workbench.action.quickTextSearch"]
        },
        {
            "before": ["<leader>", "a"],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["<leader>", "t"],
            "commands": ["workbench.action.terminal.toggleTerminal"]
        },
        {
            "before": ["<leader>", "g", "c"],
            "commands": ["git.checkout"]
        },
        {
            "before": ["<leader>", "g", "w"],
            "commands": ["workbench.view.scm"]
        },
        {
            "before": ["g", "e"],
            "commands": ["editor.action.marker.next"]
        },
        {
            "before": ["g", "E"],
            "commands": ["editor.action.marker.prev"]
        },
        {
            "before": ["g", "i"],
            "commands": ["editor.action.goToImplementation"]
        },
        {
            "before": ["g", "b"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["g", "r"],
            "commands": ["workbench.action.openRecent"]
        },
        {
            "before": ["g", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["g", "s"],
            "commands": ["workbench.action.showAllSymbols"]
        },

        {
            "before": ["<leader>", "q"],
            "commands": [":q"]
        },
        {
            "before": ["<leader>", "v"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        {
            "before": ["<leader>", "h"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": [",", "r"],
            "commands": ["workbench.action.debug.run"]
        },
        {
            "before": [",", "d"],
            "commands": ["testing.debugAll"]
        },
        {
            "before": [",", "s"],
            "commands": ["workbench.action.debug.configure"]
        },
        {
            "before": [",", "t"],
            "commands": ["testing.runAll"]
        },
        {
            "before": [",", "x"],
            "commands": ["workbench.action.debug.stop"]
        },
        {
            "before": ["<leader>", "n"],
            "commands": ["workbench.view.explorer"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<leader>", "="],
            "commands": ["editor.action.formatSelection"]
        },
        {
            "before": ["<leader>", "c"],
            "commands": ["editor.action.commentLine"]
        },
    ],
}