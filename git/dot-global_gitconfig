[core]
    pager = delta
    excludesfile = ~/.global_gitignore

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    # open in IntelliJ
    hyperlinks-file-link-format = "idea://open?file={path}&line={line}"

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
